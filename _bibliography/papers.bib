	urldate = {2023-02-09},
	journal = {Light: Science \& Applications 2020 9:1},
	author = {Azzam, Shaimaa I. and Kildishev, Alexander V. and Ma, Ren Min and Ning, Cun Zheng and Oulton, Rupert and Shalaev, Vladimir M. and Stockman, Mark I. and Xu, Jia Lu and Zhang, Xiang},

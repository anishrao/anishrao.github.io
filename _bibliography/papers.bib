	author = {Smokers, Iris B. A. and Visser, Brent S. and Slootbeek, Annemiek D. and Huck, Wilhelm T. S. and Spruijt, Evan},
	month = jul,
	year = {2024},
	note = {Publisher: American Chemical Society},
	pages = {1885--1895},
}


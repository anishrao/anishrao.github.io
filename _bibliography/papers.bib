	urldate = {2023-08-18},
	journal = {Acc. Chem. Res.},
	author = {Yamaguchi, Masahiko},
	month = jun,
	year = {2021},
	note = {Publisher: American Chemical Society},
	pages = {2603--2613},
	file = {ACS Full Text Snapshot:C\:\\Users\\RaoA\\Zotero\\storage\\NE9459PK\\acs.accounts.html:text/html},
}


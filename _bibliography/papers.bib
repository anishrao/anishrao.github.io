	journal = {Analytical Chemistry},
	author = {Mei, Zhong and Tang, Liang},
	month = jan,
	year = {2017},
	pmid = {27991768},
	note = {Publisher: American Chemical Society},
	pages = {633--639},
}

@article{baumberg_extreme_2019-2,

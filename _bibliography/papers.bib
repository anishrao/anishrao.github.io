	urldate = {2022-03-08},
	journal = {Journal of Physical Chemistry B},
	author = {MacKey, Megan A. and Ali, Moustafa R.K. and Austin, Lauren A. and Near, Rachel D. and El-Sayed, Mostafa A.},

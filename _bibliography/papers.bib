	journal = {ACS Photonics},
	author = {Kongsuwan, Nuttawut and Demetriadou, Angela and Chikkaraddy, Rohit and Benz, Felix and Turek, Vladimir A. and Keyser, Ulrich F. and Baumberg, Jeremy J. and Hess, Ortwin},
	month = jan,

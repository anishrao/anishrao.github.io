@article{yoon_surface_2019,
	title = {Surface {Plasmon} {Coupling} in {Dimers} of {Gold} {Nanoparticles}: {Experiment} and {Theory} for {Ideal} ({Spherical}) and {Nonideal} ({Faceted}) {Building} {Blocks}},
	volume = {6},
